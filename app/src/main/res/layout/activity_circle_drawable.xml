<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_circle_drawable"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gong.android.demo.activity.CircleDrawableActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_view_animation"/>

    <com.gong.android.demo.view.CircleTextView
        android:id="@+id/tv_circle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:arc_stockColor="@color/colorAccent"
        app:arc_stokeWidth="@dimen/stokeWidth"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_drawable_animation"/>

    <ImageView android:id="@+id/iv_demo_circle"
               android:layout_width="200dp"
               android:layout_height="200dp"/>

</LinearLayout>
